#!/usr/bin/env ruby

# Skinny daemon command line interface script.
# Run skinny_daemon_example -h to get more usage.
require File.dirname(__FILE__) + '/../lib/proton_server'
require 'thin'

rackup_file = "#{File.dirname(__FILE__)}/../lib/proton-stream/config.ru"

argv = ARGV
argv << ["-R", rackup_file] unless ARGV.include?("-R")
argv << ["-p", "4567"] unless ARGV.include?("-p")
argv << ["-e", "development"] unless ARGV.include?("-e")
Thin::Runner.new(argv.flatten).run!

